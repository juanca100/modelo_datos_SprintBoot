<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Obtener recurso -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Ubicacion del archivo -->
    <property name="LOGS" value="./logs" />

    <!-- Mensaje que se mandara por consola -->
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%-5p] [%t] [%d{ddMMyyyy HH:mm:ss}] [%c[%L]] %m %n</Pattern>
        </layout>
    </appender>

    <!-- Mensaje que se mandara por un archivo de loggers de rotacion -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/bb-logger.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>[%-5p] [%t] [%d{ddMMyyyy HH:mm:ss}] [%c[%L]] %m %n</Pattern>
        </encoder>

        <!-- Propiedad del archivo de loggers  de rotacion-->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/bb-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- Mensaje que se mandara por un archivo de errores de loggers de rotacion -->
    <appender name="RollingFileControllerError" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/bbcontrollererror-logger.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>[%-5p] [%t] [%d{ddMMyyyy HH:mm:ss}] [%c[%L]] %m %n</Pattern>
        </encoder>

        <!-- Propiedad del archivo de errores loggers de rotacion-->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/bbcontrollererror-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- Programar loogers determinando archivos, niveles y propagacion -->

    <!-- el root logger establece un nivel de registro global para toda la aplicación -->
    <root level="debug">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>

    <!-- los logger específicos se utilizan para controlar el registro en áreas o componentes específicos de la aplicación -->
    <!-- LOG "mx.metaphorce.spring.blockbuster.ws" at INFO level -->
    <logger name="mx.metaphorce" level="debug" additivity="true">
        <appender-ref ref="Console" />
    </logger>

    <logger name="mx.metaphorce.blockbusterapips" level="info" additivity="true">
        <appender-ref ref="RollingFile" />
    </logger>

    <logger name="mx.metaphorce.blockbusterapips.controller" level="error" additivity="true">
        <appender-ref ref="RollingFileControllerError" />
    </logger>


    <!-- LOG "org" at DEBUG level -->
    <logger name="org.springframework" level="info" additivity="true">
        <appender-ref ref="Console" />
    </logger>

    <!-- LOG "org" at WARN level -->
    <logger name="org" level="warn" additivity="true">
        <appender-ref ref="RollingFile" />
    </logger>

    <logger name="springfox" level="debug" additivity="false">

    </logger>

</configuration>